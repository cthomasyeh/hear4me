<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>  
  <%= link_to image_tag("listening2.png", alt: "Hear4Me"), '#' %>
  <div class="center hero-unit">
    <h1>Welcome to Hear4.Me</h1>

    <h2>
      <a href="http://www.thecooldoc.com/">Brought to you</a>
      by TheCoolDoc LLC.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

<% end %>
